<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>datlt.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>datlt.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>datlt.controllers.SignUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminMainController</servlet-name>
        <servlet-class>datlt.controllers.admin.AdminMainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSearchAccountController</servlet-name>
        <servlet-class>datlt.controllers.admin.AdminSearchAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteAccountController</servlet-name>
        <servlet-class>datlt.controllers.admin.AdminDeleteAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminEditAccountController</servlet-name>
        <servlet-class>datlt.controllers.admin.AdminEditAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUpdateAccountController</servlet-name>
        <servlet-class>datlt.controllers.admin.AdminUpdateAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/SignUpController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminMainController</servlet-name>
        <url-pattern>/AdminMainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSearchAccountController</servlet-name>
        <url-pattern>/AdminSearchAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDeleteAccountController</servlet-name>
        <url-pattern>/AdminDeleteAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminEditAccountController</servlet-name>
        <url-pattern>/AdminEditAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUpdateAccountController</servlet-name>
        <url-pattern>/AdminUpdateAccountController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
